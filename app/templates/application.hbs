{{#if showLayout}}
  <div class="wrap">
    <nav class="navbar navbar-default hidden-print" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="/fakturama/" class="navbar-brand">Faktura<strong>ma</strong></a>
        </div>
        <div class="collapse navbar-collapse" id="navbar">
          <ul class="nav navbar-nav">
            {{#link-to "invoices" tagName="li"}}
              <a href="javascript:;">Faktury</a>
            {{/link-to}}
            {{#unless user.isAnonymous}}
              {{#link-to "clients" tagName="li"}}
                <a href="javascript:;">Klienci</a>
              {{/link-to}}
              {{#link-to "accounts" tagName="li"}}
                <a href="javascript:;">Rachunki bankowe</a>
              {{/link-to}}
              {{#link-to "settings" tagName="li"}}
                <a href="javascript:;">Ustawienia</a>
              {{/link-to}}
            {{/unless}}
          </ul>
          <div class="navbar-right">
            {{#if user.isAnonymous}}
              <ul class="nav navbar-nav">
                <li>
                  <a href="javascript:;" {{action "signIn" "google"}}>Zaloguj</a>
                </li>
              </ul>
            {{else}}
              <p class="navbar-text">
                <img height="30" class="gravatar img-circle" src={{user.gravatarURL}}>
                {{user.name}}
              </p>
              <ul class="nav navbar-nav">
                <li>
                  <a href="javascript:;" {{action "signOut"}}>Wyloguj</a>
                </li>
              </ul>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>

    <div class="container site-content">
      {{outlet}}
    </div>
    <div class="push"></div>
  </div>

